@{
    ViewData["Title"] = "Confirm Email";
}


@{
    Layout = null;
    var email = ViewBag.Email as string;
}

<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <meta charset="UTF-8">
    <title>Підтвердження email</title>
    <script>
        localStorage.setItem("emailConfirmed", "true");
        localStorage.setItem("confirmedEmail", "@ViewBag.Email");
        setTimeout(() => {
            window.location.href = "/Auth/Index?confirmed=true";
        }, 1500);
    </script>

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .centered-container {
            display: flex;
            align-items: center; 
            justify-content: center; 
            height: 100vh; 
        }

        p {
            font-size: 1.5em;
        }
    </style>
</head>
<body>
    <div class="centered-container">
        <p>Email confirmed. You will soon be turned...</p>
    </div>
</body>
</html>