@using WebApplication1.DbModels
@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Authorize form";
}

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .faq{
            max-width:500px;
            margin:20px auto;
        }
        .faq-item{
            border:2px solid red;
            border-radius:5px;
        }
        .faq-title{
            display:block;
            padding:10px <a href="#"></a>

            color:#fff;
            cursor:pointer;

            transition: background .2s ease-out;
        }
       .faq-title:hover{
           background-color:lightcoral;
       }
       .faq-input{
           width:0px;
           height:0px;

           -webkit-appearance:none;
           appearance:none;

           position:absolute;
       }
       .faq-input:checked + .faq-text{
           display:block;
       }

       .faq-text{
           display:none;
           padding:10px <a href="#"></a>
           color:#fff;
           font-size:14px;
       }
    </style>
</head>

<h1>Log in</h1>

<div class="fag">

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <p style="background-color:red">@ViewBag.Error</p>
    }

    <div class="faq-item">
        <label class="faq-title" for="faq-login">Вхід</label>
        <input class="faq-input" type="radio" checked="checked"  name="faq" id="faq-login"></input>
        <div class="faq-text">
            <form asp-action="Login" method="post">
                <h1>Email</h1>
                <input type="text" name="Email" value="" />
                <h1>Password</h1>
                <input type="password" name="Password" value="" />
                <input type="submit" />
            </form>
        </div>
    </div>

    <div class="faq-item">
        <label class="faq-title" for="faq-registr">Реєстрація</label>
        <input class="faq-input" type="radio" name="faq" id="faq-registr"></input>
        <div class="faq-text">
            <form asp-action="Register" method="post">
                <h1>Name</h1>
                <input type="text" name="Name" value="" />
                <h1>Email</h1>
                <input type="text" name="Email" value="" />
                <h1>Password</h1>
                <input type="password" name="Password" value="" />
                <input type="submit" />
            </form>
        </div>
    </div>

</div>