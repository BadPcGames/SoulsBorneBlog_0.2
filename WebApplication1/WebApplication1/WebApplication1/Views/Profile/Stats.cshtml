@{
    ViewData["Title"] = "Profile stats";
}
@model int
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    #fileInput {
        display: none;
    }

    #image {
        cursor: pointer;
        width: 200px;
        height: 200px;
        border: 2px solid #ccc;
        border-radius: 8px;
    }
</style>
</head>

<body>
    <input type="date" id="from" value="2024-01-01">
    <input type="date" id="to" value="2025-04-16">

    <input type="button" id="showStats" value="stat">

    <div id="stats-container"></div>

</body>



<script>
    $(document).ready(function () {
        $('#showStats').click(function () {
            loadStats();
        });

        function loadStats() {
            $('#stats-container').empty();

            let from = $('#from').val();
            let to = $('#to').val();
            let userId = '@Model';
            $.ajax({
                url: '/Stats/GetUserStats',
                method: 'GET',
                data: {
                    TimeStart: from,
                    TimeEnd: to,
                    userId: userId
                },
                dataType: 'json',
                success: function (data) {
                    if (data.success && data.message) {
                        alert(data.message);
                        return;
                    }

                    $('#stats-container').empty();
                        let postTable = `<table class='table table-bordered'>
                                                            <thead>
                                                                <tr>
                                                                    <th>ID</th>
                                                                    <th>Blog Name</th>
                                                                    <th>Name</th>
                                                                    <th>Likes</th>
                                                                    <th>Dislikes</th>
                                                                    <th>Comments</th>
                                                                    <th>CreateAt</th>
                                                                    <th>More</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>`;

                        data.forEach(post => {
                            postTable += `<tr>
                                                            <td>${post.id}</td>
                                                            <td>${post.blogName}</td>
                                                            <td>${post.name}</td>
                                                            <td>${post.likeCount}</td>
                                                            <td>${post.notLikeCount}</td>
                                                            <td>${post.comentsCount}</td>
                                                            <td>${post.createAt}</td>
                                                                    <td><a href="/Posts/Stats?postId=${post.id}">More</a></td>
                                                          </tr>`;
                        });

                        postTable += `</tbody></table>`;
                        $('#stats-container').append(postTable);
                },
                error: function (error) {
                    console.error('Error fetching data', error);
                }
            });
        }
    });
</script>