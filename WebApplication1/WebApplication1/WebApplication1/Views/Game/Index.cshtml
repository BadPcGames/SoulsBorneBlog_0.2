@using Microsoft.JSInterop
@using WebApplication1.DbModels
@model IEnumerable<Game>


<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        .posts{
            border-radius: 5px;
            border: solid 5px;
            padding: 5px;
            margin: 15px;
        }
    </style>
</head>
<body>
    <a asp-controller="Game" asp-action="Create">Create</a>
    <h1>Ігри платформи</h1>
    
    @foreach(Game game in Model)
    {
        <div style="background-color:@game.Color;">
            <table style="width:100%">
                    <tr>
                        <td colspan="3">
                            <h2>@game.GameName</h2>
                        </td>
                    </tr>
                    <tr>
                        <th colspan="2">
                            <p>@game.Description</p>
                        </th>
                        <th>
                            @{
                                var base64Image = Convert.ToBase64String(game.GameCharacter);
                                var imageSrc = $"data:image/png;base64,{base64Image}";
                                <img src="@imageSrc" alt="Image" class="img-fluid" />
                            }        
                        </th>
                    </tr>
            </table>
        </div>
        <a asp-controller="Game" asp-action="Edit" asp-route-id="@game.Id" >Edit</a>
        <a asp-controller="Game" asp-action="Delete" asp-route-id="@game.Id">Delete</a>
    }
</body>    




   
