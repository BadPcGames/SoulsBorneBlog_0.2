@using Microsoft.JSInterop
@using WebApplication1.DbModels
@model IEnumerable<Game>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .game-card {
            border-radius: 10px;
            border: 2px solid #dee2e6;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .game-title {
            font-size: 1.25rem;
            font-weight: 600;
        }

        .game-description {
            font-size: 1rem;
            display: -webkit-box;
            -webkit-line-clamp: 7;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .game-image {
            max-height: 220px;
            object-fit: contain;
        }
    </style>
</head>

<body class="bg-light">
    <br>
    <h1 class="text-center">About Us</h1>

    <div class="container py-4">
        <div class="card bg-dark">
            <div class="card-body">
                <p style="color:white">This is some text within a card body.</p>
            </div>
        </div>
        <br>
        <h2 >
            Games discussed
        </h2>
        <div class="row g-4">
            @foreach (Game game in Model)
            {
                var base64Image = Convert.ToBase64String(game.GameCharacter);
                var imageSrc = $"data:image/png;base64,{base64Image}";

                <div class="col-md-3">
                    <div class="game-card h-100" style="background-color:@game.Color;">
                        <div class="text-center mb-2">
                            <img src="@imageSrc" alt="Game Character" class="img-fluid game-image rounded" />
                        </div>
                        <div class="game-title text-center">@game.GameName</div>
                        <p class="game-description mt-2">@game.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
